  { id:15, name:'AI Tools for Students (Course)', cat:'course', price:399, orig:599, emoji:'üéì', bg:'#130d1a', tags:['AI','ChatGPT','Productivity'], desc:'Master 10+ AI tools: ChatGPT, Claude, Midjourney, Notion AI. 6 hours of practical lessons.' },
