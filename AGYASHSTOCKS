const ROADMAP_PRODUCTS = [
  { id:101, name:'30-Day Frontend Roadmap', price:199 },
  { id:102, name:'45-Day Freelance Roadmap', price:249 },
  { id:103, name:'60-Day AI/ML Roadmap', price:349 },
];

const ALL_PRODUCTS = [...PRODUCTS, ...ROADMAP_PRODUCTS];

// ‚îÄ‚îÄ CART ‚îÄ‚îÄ
let cart = [];

function addToCart(id) {
  const p = ALL_PRODUCTS.find(x=>x.id===id);
  if (!p) return;
  if (cart.find(x=>x.id===id)) { showToast('Already in cart!'); return; }
  cart.push(p);
  updateCart();
  showToast(`‚úì "${p.name}" added!`, 'success');
  const btn = document.querySelector(`.btn-add-cart[data-id="${id}"]`);
  if (btn) { btn.textContent = '‚úì Added'; btn.classList.add('added'); setTimeout(()=>{btn.textContent='Add to Cart';btn.classList.remove('added');},2000); }
}

function removeFromCart(id) { cart=cart.filter(x=>x.id!==id); updateCart(); }

function updateCart() {
  const count = cart.length;
  document.getElementById('cartCount').textContent = count;
  const total = cart.reduce((s,i)=>s+i.price,0);
  document.getElementById('cartTotalAmt').textContent = `‚Çπ${total}`;
  const body = document.getElementById('cartBody');
  if (!count) { body.innerHTML='<div class="cart-empty-state">üõí<span>Your cart is empty</span></div>'; return; }
  body.innerHTML = cart.map(p=>`
    <div class="ci">
      <div class="ci-icon">${p.emoji||'üì¶'}</div>
      <div class="ci-info"><h4>${p.name}</h4><span>${p.cat||'product'}</span></div>
      <div class="ci-price">‚Çπ${p.price}</div>
      <button class="ci-rm" onclick="removeFromCart(${p.id})">‚úï</button>
    </div>
  `).join('');
}

function toggleCart() {
  document.getElementById('cartOverlay').classList.toggle('open');
  document.getElementById('cartPanel').classList.toggle('open');
}

function checkoutCart() {
  if (!cart.length) { showToast('Your cart is empty!'); return; }
  const total = cart.reduce((s,i)=>s+i.price,0);
  const desc = encodeURIComponent(cart.map(i=>i.name).join(', '));
  const url = `https://www.paypal.com/cgi-bin/webscr?cmd=_xclick&business=YOUR_PAYPAL_EMAIL&amount=${total}&item_name=${desc}&currency_code=INR&return=${encodeURIComponent(location.href)}`;
  showToast('Redirecting to PayPal‚Ä¶');
  setTimeout(()=>window.open(url,'_blank'),800);
}

function checkoutPayPal(plan, amt) {
  const url = `https://www.paypal.com/cgi-bin/webscr?cmd=_xclick-subscriptions&business=YOUR_PAYPAL_EMAIL&item_name=${encodeURIComponent(plan)}&a3=${amt}&p3=1&t3=M&currency_code=INR&return=${encodeURIComponent(location.href)}`;
  showToast(`Redirecting to PayPal for ${plan}‚Ä¶`);
  setTimeout(()=>window.open(url,'_blank'),800);
}

// ‚îÄ‚îÄ RENDER PRODUCTS ‚îÄ‚îÄ
const THUMB_BG = {
  coding:'linear-gradient(135deg,#0a1628,#0d2040)',
  prompts:'linear-gradient(135deg,#1a0d08,#2a1510)',
  ebook:'linear-gradient(135deg,#0a1612,#0d2018)',
  productivity:'linear-gradient(135deg,#14100a,#201808)',
  course:'linear-gradient(135deg,#0d1a20,#102030)',
};
const CAT_COLOR = { coding:'#00e5ff', prompts:'#ff3cac', ebook:'#a78bfa', productivity:'#ffd60a', course:'#fb923c' };
const CAT_LABEL = { coding:'Coding Notes', prompts:'Prompts', ebook:'eBook', productivity:'Productivity', course:'Mini Course' };

function renderProducts(filter='all') {
  const grid = document.getElementById('productsGrid');
  const list = filter==='all' ? PRODUCTS : PRODUCTS.filter(p=>p.cat===filter);
  grid.innerHTML = list.map(p=>`
    <div class="prod-card" data-cat="${p.cat}">
      <div class="prod-thumb" style="background:${THUMB_BG[p.cat]||'var(--surface)'}">
        <span>${p.emoji}</span>
        <div class="prod-badge" style="background:${CAT_COLOR[p.cat]}22;color:${CAT_COLOR[p.cat]};border:1px solid ${CAT_COLOR[p.cat]}44">${CAT_LABEL[p.cat]||p.cat}</div>
        ${p.best?'<div class="prod-bestseller">üî• Bestseller</div>':''}
      </div>
      <div class="prod-body">
        <h3>${p.name}</h3>
        <p>${p.desc}</p>
        <div class="prod-tags">${p.tags.map(t=>`<span class="tag">${t}</span>`).join('')}</div>
      </div>
      <div class="prod-footer">
        <div class="prod-price">
          <span class="curr">‚Çπ${p.price}</span>
          ${p.orig?`<span class="orig">‚Çπ${p.orig}</span>`:''}
        </div>
        <button class="btn-add-cart" data-id="${p.id}" onclick="addToCart(${p.id})">Add to Cart</button>
      </div>
    </div>
  `).join('');
}

document.getElementById('filterRow').addEventListener('click', e=>{
  const tab = e.target.closest('.ftab');
  if (!tab) return;
  document.querySelectorAll('.ftab').forEach(t=>t.classList.remove('active'));
  tab.classList.add('active');
  renderProducts(tab.dataset.filter);
});

renderProducts();

// ‚îÄ‚îÄ SEARCH ‚îÄ‚îÄ
const sInput = document.getElementById('searchInput');
const sDrop = document.getElementById('searchDrop');

sInput.addEventListener('input', ()=>{
  const q = sInput.value.trim().toLowerCase();
  if (!q) { sDrop.classList.remove('open'); return; }
  const hits = PRODUCTS.filter(p=>p.name.toLowerCase().includes(q)||p.cat.includes(q)||p.tags.some(t=>t.toLowerCase().includes(q)));
  if (!hits.length) {
    sDrop.innerHTML=`<div class="sdrop-item"><span class="sdrop-name" style="color:var(--muted)">No results found</span></div>`;
  } else {
    sDrop.innerHTML=hits.map(p=>`
      <div class="sdrop-item" onclick="selectSearch(${p.id})">
        <span>${p.emoji}</span>
        <span class="sdrop-badge" style="background:${CAT_COLOR[p.cat]}22;color:${CAT_COLOR[p.cat]}">${p.cat}</span>
        <span class="sdrop-name">${p.name}</span>
        <span class="sdrop-price">‚Çπ${p.price}</span>
      </div>
    `).join('');
  }
  sDrop.classList.add('open');
});

function selectSearch(id) {
  sInput.value=''; sDrop.classList.remove('open');
  addToCart(id); goTo('#products');
}

document.addEventListener('click', e=>{ if(!e.target.closest('.search-wrap')) sDrop.classList.remove('open'); });

// ‚îÄ‚îÄ FILTER from category cards ‚îÄ‚îÄ
function filterProducts(cat) {
  document.querySelectorAll('.ftab').forEach(t=>{
    t.classList.toggle('active', t.dataset.filter===cat);
  });
  renderProducts(cat);
}

// ‚îÄ‚îÄ AUTH ‚îÄ‚îÄ
function openAuth(tab='login') {
  switchAuth(tab);
  document.getElementById('authOverlay').classList.add('open');
}
function closeAuth() { document.getElementById('authOverlay').classList.remove('open'); }
function handleAuthBg(e) { if(e.target===document.getElementById('authOverlay')) closeAuth(); }
function switchAuth(tab) {
  const isL = tab==='login';
  document.getElementById('tabLogin').classList.toggle('active',isL);
  document.getElementById('tabReg').classList.toggle('active',!isL);
  document.getElementById('formLogin').classList.toggle('active',isL);
  document.getElementById('formReg').classList.toggle('active',!isL);
  document.getElementById('authTitle').textContent = isL?'Welcome Back':'Create Account';
  document.getElementById('authSub').textContent = isL?'Sign in to access your purchases':'Join 3,200+ students today';
}
function doLogin(e) { e.preventDefault(); closeAuth(); showToast('üëã Signed in successfully!','success'); }
function doRegister(e) { e.preventDefault(); closeAuth(); showToast('üéâ Account created! Welcome aboard.','success'); }

// ‚îÄ‚îÄ NEWSLETTER ‚îÄ‚îÄ
function subscribeNL() {
  const v = document.getElementById('nlEmail').value.trim();
  if(!v||!v.includes('@')) { showToast('Enter a valid email!'); return; }
  document.getElementById('nlEmail').value='';
  document.getElementById('nlSuccess').style.display='flex';
  showToast('üì¨ Subscribed! Check your inbox.','success');
}

// ‚îÄ‚îÄ TOAST ‚îÄ‚îÄ
function showToast(msg, type='') {
  const wrap = document.getElementById('toastWrap');
  const t = document.createElement('div');
  t.className = 'toast'+(type?' '+type:'');
  t.innerHTML = msg;
  wrap.appendChild(t);
  setTimeout(()=>{ t.style.transition='all 0.3s'; t.style.opacity='0'; t.style.transform='translateX(120%)'; setTimeout(()=>t.remove(),300); },3000);
}

// ‚îÄ‚îÄ UTIL ‚îÄ‚îÄ
function goTo(sel) {
  const el = document.querySelector(sel);
  if (el) el.scrollIntoView({behavior:'smooth'});
}
</script>
</body>
</html>
