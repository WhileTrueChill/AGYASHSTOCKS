<script>
// ‚îÄ‚îÄ CURSOR ‚îÄ‚îÄ
const cur = document.getElementById('cursor');
const ring = document.getElementById('cursorRing');
let mx=0,my=0,rx=0,ry=0;
document.addEventListener('mousemove', e => { mx=e.clientX; my=e.clientY; cur.style.left=mx+'px'; cur.style.top=my+'px'; });
function animRing() { rx+=(mx-rx)*0.12; ry+=(my-ry)*0.12; ring.style.left=rx+'px'; ring.style.top=ry+'px'; requestAnimationFrame(animRing); }
animRing();

// ‚îÄ‚îÄ DATA ‚îÄ‚îÄ
const PRODUCTS = [
  { id:1,  name:'Java Complete Notes + PYQ', cat:'coding',      price:299, orig:499, emoji:'‚òï', bg:'#0a1628', tags:['Java','OOP','PYQ','Interview'], desc:'200+ pages, full syllabus, previous year Qs, interview Q&A. Covers collections, threads, JDBC, Spring basics.', best:true },
